{
    "manifest_version": 2,
    "name": "Tenhou English UI",
   "version": "4.5",
    "description": "Change the UI text on the Tenhou HTML5 Web Client from Japanese to English",
    "icons": {
        "16": "icons/tenhou-16.png",
        "19": "icons/tenhou-19.png",
        "32": "icons/tenhou-32.png",
        "38": "icons/tenhou-38.png",
        "64": "icons/tenhou-64.png",
        "128": "icons/tenhou-128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/tenhou-16.png",
            "19": "icons/tenhou-19.png",
            "32": "icons/tenhou-32.png",
            "38": "icons/tenhou-38.png",
            "64": "icons/tenhou-64.png",
            "128": "icons/tenhou-128.png"
        },
        "default_popup": "options.html",
        "default_title": "Tenhou English UI - change translation"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "*://tenhou.net/*",
        "*://p.mjv.jp/*"
    ],
    "background": {
        "scripts": [
            "background.js",
            "tile-sheet-height.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://tenhou.net/3*",
          "*://tenhou.net/5*",
                "*://tenhou.net/sc/*",
                "*://tenhou.net/ranking.html",
                "*://tenhou.net/stat/*"
            ],
            "js": [
                "translations.js",
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "chrome_style": true,
        "page": "options.html"
    }
}
